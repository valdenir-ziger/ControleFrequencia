<form class="text-dark" action="/pessoaEdit" method="post">
    <div class="form-group col-md-5" style="background-color: #b4b1d8;">
        <h5>Alterando Usuario de Login: {{pessoas.cpf_pessoa}}</h5>
        <input type="hidden" name="id" value="{{pessoas.cod_pessoa}}">
        <div class="form-group col-8">
            <label for="campoNome">Nome</label>
            <input type="text" class="form-control" id="campoNome" name="nome"  value="{{pessoas.nome_pessoa}}">
        </div>
        <div class="form-group col-8">
            <label for="campoSenha">Nova Senha</label>
            <input type="password" class="form-control" id="campoSenha" required name="senha" value="{{pessoas.senha_pessoa}}">
        </div>
        <div class="form-group col-8">
            <label for="campoSenhaRepetida">Confirmar Senha</label>
            <input type="password" class="form-control" id="campoSenhaRepetida" required name="senhaRepitida" value="{{pessoas.senha_pessoa}}">
        </div>
        <br>
        <button type="submit" class="btn" style="background-color: #e4b94c;">Salvar</button>
        <br><br>
    </div>
</form>